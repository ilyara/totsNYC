= form_for @play_date do |f|
  -if @play_date.errors.any?
    #error_explanation
      %h2= "#{pluralize(@play_date.errors.count, "error")} prohibited this play_date from being saved:"
      %ul
        - @play_date.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.collection_select :location_id, Location.all, :id, :name
  .actions
    = f.submit 'Save'
