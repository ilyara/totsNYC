%h1= t('.title')
%p= link_to t('.new_kuka'), new_kuka_path

%table
  %thead
    %tr
      %th= Kuka.human_attribute_name :name
      %th= Kuka.human_attribute_name :comment
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for kuka in @kukas
      %tr{ :class => cycle(:odd, :even) }
        %td= kuka.name
        %td= kuka.comment
        %td.action= link_to t('show'), kuka
        %td.action= link_to t('edit'), edit_kuka_path(kuka)
        %td.action= link_to t('destroy'), kuka, :confirm => t('are_you_sure'), :method => :delete
