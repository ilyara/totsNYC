= form_for @phone_id do |f|
  -if @phone_id.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone_id.errors.count, "error")} prohibited this phone_id from being saved:"
      %ul
        - @phone_id.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'
