= form_for(@kuka) do |f|
  - if @kuka.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@kuka.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @kuka.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :comment
    %br
    = f.text_field :comment

  .actions
    = f.submit
