= form_for @signup do |f|
  -if @signup.errors.any?
    #error_explanation
      %h2= "#{pluralize(@signup.errors.count, "error")} prohibited this signup from being saved:"
      %ul
        - @signup.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :play_date
    = f.collection_select :play_date_id, PlayDate.all, :id, :name
  .field
    = f.label :person
    = f.collection_select :person_id, Person.all, :id, :nick
  .actions
    = f.submit 'Save'
